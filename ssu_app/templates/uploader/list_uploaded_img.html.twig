{% extends 'base.html.twig' %}

{% block title %}Hello UploaderController!
{% endblock %}

{% block body %}

	<div class="album py-5 bg-body-tertiary">
    <div class="container pt-4">
      <div class="col-12">
      <h1>List of uploaded images</h1></div>
      <div class="example-wrapper p-4">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for key,value in filesInDir %}
              <div class="card shadow-sm m-1">
              <h5 class="text-dark pt-2">{{ value }}</h5>
              <img src="{{ asset('upload/' ~ value) }}"class="img-thumbnail mt-2" width="100%" height="175px" alt="{{ value }}" />
              <div class="card-body">
                <p class="card-text">This a file uploaded via XmlHttprequest</p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-body-secondary">uploaded file</small>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
      </div>
    </div>
  </div>

{% endblock %}
